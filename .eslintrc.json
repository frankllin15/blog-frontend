{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "next",
        "next/core-web-vitals",
        "plugin:react/recommended",
        "prettier" 
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-unused-vars": "error",
        "@typescript-eslint/no-explicit-any": "error"
    }
}